<article>
  <h2>{{post.title}}</h2>
  <p>Written by {{post.user.username}} on {{formatDate post.created_at}}</p>
  {{{markdownToHtml post.content}}}
  <h3>Comments</h3>
  {{#each post.comments as |comment|}}
    <div>
      <p>{{user.username}} said on {{formatDate created_at}}</p>
      <p>{{comment_text}}</p>
    </div>
  {{/each}}
</article>