<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <title>NibbleShare</title>
  </head>
  <body>
    <header>
      <nav>
        <div class="nav-wrapper">
          <a href="/" class="brand-logo">NibbleShare</a>
          <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i
              class="material-icons"
            >menu</i></a>
          <ul class="right hide-on-med-and-down">
            {{#if loggedIn}}
              <li><a href="/dashboard">Dashboard</a></li>
              <li><a class="logoutButton">Logout</a></li>
            {{else}}
              <li><a href="/login">Login/Signup</a></li>
            {{/if}}
          </ul>
        </div>
      </nav>

      <ul class="sidenav" id="mobile-nav">
        {{#if loggedIn}}
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a class="logoutButton">Logout</a></li>
        {{else}}
          <li><a href="/login">Login/Signup</a></li>
        {{/if}}
      </ul>
    </header>
    <main class="container">{{{body}}}</main>
    <footer class="footer-copyright red lighten-2">
      <div class="container center white-text">
        &copy; 2022 NibbleShare
      </div>
    </footer>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"
    ></script>
    <script src="/javascript/mobile-nav.js"></script>
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>
</html>